{
  "name": "@hyperlog/backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "db:seed": "tsx ./drizzle.seed.ts",
    "build": "tsup",
    "dev": "tsup && tsup --watch & node --env-file=.env --watch dist/server.js",
    "db:dbml": "tsx ./drizzle.dbml.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hyperlog/shared": "workspace:*",
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.4.1",
    "bcrypt-ts": "^5.0.3",
    "drizzle-orm": "^0.37.0",
    "drizzle-zod": "^0.6.1",
    "helmet": "^8.0.0",
    "hono": "^4.6.12",
    "hono-rate-limiter": "^0.4.2",
    "pg": "^8.13.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.10.1",
    "@types/pg": "^8.11.10",
    "dotenv": "^16.4.7",
    "drizzle-dbml-generator": "^0.10.0",
    "drizzle-kit": "^0.29.1",
    "drizzle-seed": "^0.1.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "source": "./src/server.ts",
      "import": "./dist/server.js"
    }
  }
}
