{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": { "env": ["NODE_ENV"], "dependsOn": ["^build"], "outputs": ["dist/**"] },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "eslint": {
      "dependsOn": [],
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
